---
import LogoIcon from '@/icons/logo-icon.astro'

const { class: className, ...attributes } = Astro.props
---

<a class:list={['logo', className]} {...attributes} href="/"><LogoIcon /></a>

<style>
  @import '../styles/mixins.css';

  .logo {
    @mixin focus;

    z-index: 2;
    width: 3rem;
    height: 3rem;
    color: var(--c-text-primary);
    line-height: 0;

    & svg {
      width: 100%;
      height: 100%;
    }
  }
</style>
