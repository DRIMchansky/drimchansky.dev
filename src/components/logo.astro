---
import { getRelativeLocaleUrl } from 'astro:i18n'
import LogoIcon from '@/icons/logo-icon.astro'

const { class: className, ...attributes } = Astro.props
const locale = Astro.currentLocale!
---

<a class:list={['logo', className]} {...attributes} href={getRelativeLocaleUrl(locale, '/')} aria-label="Home page"
  ><LogoIcon class="icon" /></a
>

<style>
  @import '../styles/mixins.css';

  .logo {
    @mixin focus;

    z-index: 2;
    width: 3rem;
    height: 3rem;
    color: var(--c-text-primary);
    line-height: 0;

    & .icon {
      width: 100%;
      height: 100%;
    }
  }
</style>
